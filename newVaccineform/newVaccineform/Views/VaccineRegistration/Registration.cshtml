
@{
    ViewBag.Title = "Registration";
}

<h2>Registration</h2>



<h2>Registration</h2>
<div class="container">
    <form action="" method="post">
        @Html.ValidationMessage("Name")
        <input type="text" placeholder="Enter name" name="Name" value="@(Model ==null? "":Model.Name )" /><br />

        @Html.ValidationMessage("Email")
        <input type="text" placeholder="Enter email" name="Email" value="@(Model ==null? "":Model.Email )" /><br />
        @Html.ValidationMessage("Phone_No")
        <input type="text" placeholder="Enter phone no" name="Phone_No" value="@(Model ==null? "":Model.Phone_No )" /><br />
        @Html.ValidationMessage("Date")
        <label for="date">Birth Date</label><br />
        <input type="datetime" name="Date" value="@(Model ==null? "":Model.Date )" /><br />
        @Html.ValidationMessage("Password")
        <input type="password" placeholder="Enter password" name="Password" value="@(Model ==null? "":Model.Password )" /><br />
        <input type="password" placeholder="Confirm password" name="ConfirmPassword" value="@(Model ==null? "":Model.ConfirmPassword )" /><br />
        @Html.ValidationMessage("ConfirmPassword")
        <label for="gender">Gender</label><br />
        <input type="text" name="Gender" placeholder="Enter value " value="" />
      <br />
        <select name="BG">
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
        </select>
        <br />


        <input type="submit" class="btn btn-success" name="submit" value="Submit" />
    </form>
</div>
